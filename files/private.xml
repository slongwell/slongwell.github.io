    <item>
        <name>Home Row Arrow Keys: CAPS + IJKL to ^&lt;&gt;v</name>
        <identifier>private.coolaj86_caps_homerowarrows</identifier>
        
        <!--  -->
        <autogen>
            __KeyToKey__ 
            KeyCode::I, ModifierFlag::CONTROL_R, KeyCode::CURSOR_UP
        </autogen>
        <autogen>
            __KeyToKey__ 
            KeyCode::J, ModifierFlag::CONTROL_R, KeyCode::CURSOR_LEFT
        </autogen>
        <autogen>
            __KeyToKey__ 
            KeyCode::K, ModifierFlag::CONTROL_R, KeyCode::CURSOR_DOWN
        </autogen>
        <autogen>
            __KeyToKey__ 
            KeyCode::L, ModifierFlag::CONTROL_R, KeyCode::CURSOR_RIGHT
        </autogen>        
        
        <autogen>
            __KeyToKey__ 
            KeyCode::O, ModifierFlag::CONTROL_R, KeyCode::DELETE
        </autogen> 
        <autogen>
            __KeyToKey__ 
            KeyCode::P, ModifierFlag::CONTROL_R, KeyCode::FORWARD_DELETE
        </autogen>


        <autogen>
            __KeyToKey__ 
            KeyCode::F, ModifierFlag::CONTROL_R,
            KeyCode::OPTION_R, ModifierFlag::CONTROL_R
        </autogen>

        <autogen>
            __KeyToKey__ 
            KeyCode::S, ModifierFlag::CONTROL_R,
            KeyCode::SHIFT_L, ModifierFlag::CONTROL_R
        </autogen>
        <autogen>
            __KeyToKey__ 
            KeyCode::D, ModifierFlag::CONTROL_R,
            KeyCode::COMMAND_L, ModifierFlag::CONTROL_R
        </autogen>  


    </item>



