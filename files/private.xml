    <item>
        <name>Expose toggle</name>
        <identifier>private.expose</identifier>
        <autogen>
            __KeyToKey__
            KeyCode::COMMAND_R,
            KeyCode::VK_CONFIG_TOGGLE_notsave_private_expose, Option::NOREPEAT
<!--             KeyCode::VK_CONFIG_TOGGLE_notsave_private_expose, KeyCode::EXPOSE_ALL, Option::NOREPEAT--> 
        </autogen>

    </item>

    <item hidden="true">
        <identifier vk_config="true">notsave.private_expose</identifier>
        <autogen>__ShowStatusMessage__ J ---- L </autogen>
        <autogen>__KeyToKey__ KeyCode::J, KeyCode::CURSOR_LEFT, ModifierFlag::CONTROL_L</autogen>
        <autogen>__KeyToKey__ KeyCode::L, KeyCode::CURSOR_RIGHT, ModifierFlag::CONTROL_L</autogen>
    </item>



    <item>

        <name>Non Apple Tweaks</name>
        <identifier>private.NON_APPLE</identifier>

        <device_not>
            DeviceVendor::APPLE_INC, DeviceProduct::ANY
        </device_not>

        <autogen>
            __KeyToKey__ 
            KeyCode::COMMAND_L, KeyCode::OPTION_L
        </autogen> 

        <autogen>
            __KeyToKey__ 
            KeyCode::OPTION_L, KeyCode::COMMAND_L
        </autogen> 

        <autogen>
            __KeyToKey__ 
            KeyCode::OPTION_R, KeyCode::EXPOSE_ALL 
        </autogen>  

    </item>

